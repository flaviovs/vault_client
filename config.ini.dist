[api]
; No trailing slashes in the API URL.
url = ?
key = ?
secret = ?
vault_secret = ?

[oauth]
client_id = ?
client_secret = ?
redirect_url = "<BASE-URL>/auth"
request_token_url = "https://public-api.wordpress.com/oauth2/token"
authenticate_url = "https://public-api.wordpress.com/oauth2/authenticate"

[mailer]
from_address = unconfigured@example.com
from_name = Vault

; Change to true to not send emails (just log them)
debug = false
